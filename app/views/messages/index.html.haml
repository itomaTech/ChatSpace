.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
        = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__edit-user
            = link_to edit_user_path(current_user) do
              %i.fa.fa-edit
          %li.side-header__box__menu__new-group
            = link_to '#' do
              %i.fa.fa-cog

    .groups
      = link_to '#' do
        .group
          .group__group-name groupName
          .group__latest-message latestMessage

  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group groupName
        %ul.main-header__left-box__member-list
          memberï¼š
          %li.main-header__left-box__member-list__member-name tomoya
      = link_to '#' do
        .main-header__edit-btn Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker tomoya
          %p.message__upper-info__date 2019/03/29(Fri)10:55:00
        %p.message__text hogetext
    .form
      %form.new-message
        .input-box
          %input.input-box__text{placeholder: "type a message"}
          %label.input-box__image{for: "upload-icon"}
            %icon.fa.fa-picture-o
            %input{type: "file", id: "upload-icon"}
            .input-box__image__file
          %input.submit-btn{:type => "submit", :value => "Send"}




