.wrapper
  = render 'shared/side_bar'

  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          = @group.name
        %ul.main-header__left-box__member-list
          Memberï¼š
          %li.main-header__left-box__member-list__member-name
          = current_user.name
      = link_to edit_group_path(current_user.group_ids) do
        .main-header__edit-btn Edit

    .messages
      = render @messages

    .form
      = form_for [@group, @message], html: {class: "new-message"} do |f|
        .input-box
          = f.text_field :body, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, id: 'message_image'
          = f.submit 'Send', class: 'submit-btn'




